{
  "name": "chez",
  "version": "1.0.1",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "pnpm typecheck && pnpm lint && pnpm test",
    "prepare": "husky",
    "build:ios": "eas build --platform ios --profile production --auto-submit",
    "build:ios:local": "./scripts/build-ios.sh",
    "build:ios:archive": "npx expo prebuild --platform ios --clean && cd ios && pod install && cd .. && xcodebuild -workspace ios/chez.xcworkspace -scheme chez -configuration Release -archivePath build/chez.xcarchive -destination 'generic/platform=iOS' -allowProvisioningUpdates archive",
    "build:android": "eas build --platform android --profile production"
  },
  "dependencies": {
    "@expo-google-fonts/plus-jakarta-sans": "^0.4.2",
    "@expo/metro-runtime": "^6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@shopify/flash-list": "^2.0.2",
    "@supabase/supabase-js": "^2.91.1",
    "@tanstack/react-query": "^5.90.20",
    "base64-arraybuffer": "^1.0.2",
    "expo": "54.0.33",
    "expo-audio": "^1.1.1",
    "expo-av": "^16.0.8",
    "expo-clipboard": "^8.0.8",
    "expo-constants": "~18.0.13",
    "expo-dev-client": "~6.0.20",
    "expo-file-system": "^19.0.21",
    "expo-font": "^14.0.11",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-image-picker": "~17.0.10",
    "expo-keep-awake": "~15.0.8",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-router": "6.0.23",
    "expo-secure-store": "~15.0.8",
    "expo-speech": "~14.0.8",
    "expo-splash-screen": "^31.0.13",
    "expo-sqlite": "^16.0.10",
    "expo-status-bar": "~3.0.9",
    "expo-symbols": "^1.0.8",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-purchases": "^9.7.6",
    "react-native-reanimated": "~4.1.6",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-teleport": "^1.0.0",
    "react-native-worklets": "^0.5.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.10",
    "@types/react": "~19.1.17",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-expo": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-expo": "^54.0.17",
    "lint-staged": "^16.2.7",
    "openai": "^6.16.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.6.1",
  "engines": {
    "node": ">=18"
  }
}
